    margin: 0 auto;
    display: flex !important;
    justify-content: center;
    align-items: center;
}
.custom-hero {
  padding: 64px 0;
  {% if section.settings.bg_image != blank %}
  background-image: url('{{ section.settings.bg_image | image_url }}');
  {% endif %}
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.custom-hero .container {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 16px;
}

.custom-hero__inner {
 

  display: grid;
  grid-template-columns: 1.1fr 0.9fr;
  gap: 40px;
  align-items: center;
  padding-bottom:48px;
}

.custom-hero__content h1 {
    font-family: Cormorant;
    font-weight: 700;
    font-style: Bold;
    font-size: 56px;
    leading-trim: NONE;
    line-height: 120%;
    letter-spacing: 0.2px;
    background: linear-gradient(90deg, #9333EA 0%, #2563EB 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    margin: 0 0 24px;
}

.custom-hero__desc {
    font-family: Open Sans;
    font-weight: 400;
    font-style: Regular;
    font-size: 20px;
    leading-trim: NONE;
    line-height: 129%;
    letter-spacing: 0%;
    color: #000000CC;
    margin: 0 0 32px;
}

.custom-hero__btn {
    display: inline-block;
    color: #fff;
    padding: 12px 22px;
    border-radius: 0;
    text-decoration: none;
    background: linear-gradient(90deg, #9333EA 0%, #2563EB 100%);
    font-family: Open Sans;
    font-weight: 600;
    font-style: SemiBold;
    font-size: 16px;
    leading-trim: NONE;
    line-height: 155%;
    letter-spacing: 0.6px;
    width: 100%;
    max-width: 131px;
}

.custom-hero__subtext {
   
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 129%;
    text-transform: capitalize;
    color: #000;
    margin: 16px 0 0;
    display: inline-block;
    border-bottom: 1px solid #000;
}


.custom-hero__image img {
  width: 100%;
  object-fit: cover;
}

/* Testimonial */
.custom-hero__testimonial {
    max-width: 724px;
    padding-top: 48px;
    text-align: center;
    margin: 0 auto;
}
.testimonial-text {
    font-family: Open Sans, sans-serif;
    font-weight: 600;
    font-style: SemiBold;
    font-size: 22px;
    leading-trim: NONE;
    line-height: 155%;
    letter-spacing: 0.6px;
    text-align: center;
    color: #000;
    margin: 0 0 16px;
}



span.star_icon {
    line-height: 100%;
    font-size: 0;
}



.testimonial-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
}


span.author, span.date_text {
    font-family: Open Sans, sans-serif;
    font-weight: 400;
    font-style: Regular;
    font-size: 14px;
    leading-trim: NONE;
    line-height: 155%;
    letter-spacing: 0.6px;
    color: #000;
}

@media(max-width:1220px){
.custom-hero__content h1 {
    line-height: 76%;
}
}
