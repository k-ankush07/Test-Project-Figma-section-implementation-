<style>
 .custom-hero span.swiper-pagination-bullet {
    background: #000;
}

.custom-hero  .swiper-button-next {
    background: transparent;
}
.custom-hero .swiper-button-next svg {
    fill: transparent;
}
.custom-hero .swiper-button-prev svg {
    fill: transparent;
}

.custom-hero .swiper-button-prev.swiper-button-disabled {
    display: none;
}

.custom-hero .swiper-button-next.swiper-button-disabled {
    display: none;
}

.custom-hero .swiper-pagination.swiper-pagination-clickable.swiper-pagination-bullets.swiper-pagination-horizontal {
    position: unset;
}
